# .env - Batch sender configuration
# SECURITY WARNING:
# - Never commit this file to source control.
# - Keep PRIVATE_KEY offline and only use in a secure, isolated environment.
# - Prefer running the batch script on a trusted local machine or secure server.

# Your private key (0x...)
PRIVATE_KEY=

# RPC node URL (Base Mainnet recommended)
RPC_URL=https://mainnet.base.org

# Batch settings
TOTAL_SWAPS=100
AMOUNT=0.001
DELAY_MS=5000

# Gas mode: set to 'slow' or set SLOW_GAS=true to use the lowest-priority fees
GAS_MODE=slow
SLOW_GAS=true
PRIORITY_GWEI=0

# When using slow gas mode, add this amount (in gwei) to baseFee to compute maxFee
# Example: MAXFEE_ADD_GWEI=1 will set maxFee = baseFee + 1 gwei + priority
MAXFEE_ADD_GWEI=0

# Optional: alternate env name used by the frontend if needed
VITE_RPC_URL=
